{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YouTuDown",
  "version": "0.1.0",
  "identifier": "com.youtudown.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "YouTuDown",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"],
    "category": "Video",
    "shortDescription": "4K YouTube视频下载器",
    "longDescription": "支持YouTube等主流视频网站的高清视频下载，特别支持4K分辨率和自定义时间段下载功能",
    "copyright": "",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "hardenedRuntime": false,
      "files": {
        "混入逻辑.files": []
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "template": null,
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["SimpChinese", "TraditionalChinese", "English"]
      },
      "webviewInstallMode": {
        "silent": true,
        "type": "offlineInstaller"
      },
      "allowDowngrades": true,
      "wix": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {}
    }
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "yt-dlp",
          "sidecar": true,
          "args": true,
          "allowAll": true
        }
      ]
    }
  }
}
